@model IDemotivator.Models.HomeViewModel

    @{
    ViewBag.Title = Resources.Resource.HomePage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string comments, votenow, voteshow;
    }
<link rel="stylesheet" href="~/Content/lightbox.css">
<link rel="stylesheet" href="~/Content/HomeImage.css">
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/lightbox.js"></script>
<div class="panel panel-default col-md-offset-8" style="position:fixed; right:0px;width:20%; top:10%;" >
    <div class="panel-heading"> @Resources.Resource.Tags :</div>
    <div class="panel-body">
        <div id="tags">
            @foreach (var t in Model.tags ) {
            @Html.ActionLink(t.Name, "SearchResult", "Demotivators", new { @id=t.Id}, new { @title = "Найдено демотиваторов: " });
            <b> </b>
            }
        </div>
    </div>
</div>
<div class="container">
    <h3>Top Date Demotivators</h3>
    <div class="container">
        @foreach (var item in Model.TopDateDemotivators)
        {
        voteshow = "";
        comments = Html.Partial("_Comments", item.Comments, new ViewDataDictionary { { "id", @item.Id } }).ToString();
        votenow = Html.Partial("_VoteNow", item.Id.ToString()).ToString();
        if (item.Rate is string)
        {
        voteshow = Html.Partial("_VoteShow", item.Rate.ToString()).ToString();
        }
        <div class="col-md-4 col-sm-4 col-xs-6 shine_me" style="text-align: center">
            <a class="example-image-link" href="@item.Url_Img" data-title="<a href=&quot;/Demotivators/Details/@item.Id&quot; class=&quot;btn btn-default&quot; >Details </a>@votenow@voteshow@comments" data-lightbox="example-1"><img align="middle" class="example-image img-responsive" src="@item.Url_Img" alt="image-1" width="200" height="222" /></a>
            <i class="shine_effect"></i>
        </div>
        }
    </div>
    <dl class="dl-horizontal" />
    <div class="container">
        <h3>Top Rate Demotivators</h3>
        @foreach (var item in Model.TopRateDemotivators)
        {
        voteshow = "";
        comments = Html.Partial("_Comments", item.Comments, new ViewDataDictionary { { "id", @item.Id } }).ToString();
        votenow = Html.Partial("_VoteNow", item.Id.ToString()).ToString();
        if (item.Rate is string)
        {
        voteshow = Html.Partial("_VoteShow", item.Rate.ToString()).ToString();
        }
        <div class="col-md-4 col-sm-4 col-xs-6 shine_me" style="text-align: center">
            <a class="example-image-link" href="@item.Url_Img" data-title="<a href=&quot;/Demotivators/Details/@item.Id&quot; class=&quot;btn btn-default&quot; >Details </a>@votenow@voteshow@comments" data-lightbox="example-1"><img class="example-image img-responsive" src="@item.Url_Img" alt="image-1" width="200" height="222" /></a>
            <i class="shine_effect"></i>
        </div>
        }
    </div>
    <h3>Top Discus Demotivators</h3>
    <div class="container">

        @foreach (var item in Model.TopDiscusDemotivators)
        {
        voteshow = "";
        comments = Html.Partial("_Comments", item.Comments, new ViewDataDictionary { { "id", @item.Id } }).ToString();
        votenow = Html.Partial("_VoteNow", item.Id.ToString()).ToString();
        if (item.Rate is string)
        {
        voteshow = Html.Partial("_VoteShow", item.Rate.ToString()).ToString();
        }
        <div class="col-md-4 col-sm-4 col-xs-6 shine_me" style="text-align: center">
            <a class="example-image-link" href="@item.Url_Img" data-title="<a href=&quot;/Demotivators/Details/@item.Id&quot; class=&quot;btn btn-default&quot; >Details </a>@votenow@voteshow@comments" data-lightbox="example-1"><img align="middle" class="example-image img-responsive" src="@item.Url_Img" alt="image-1" width="200" height="222" /></a>
            <i class="shine_effect"></i>
        </div>
        }
    </div>
</div>
</dl>

